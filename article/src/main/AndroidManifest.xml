<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.github.ytjojo.article">

    <application
        android:name="com.example.jhordan.people_mvvm.PeopleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.jhordan.people_mvvm.view.PeopleActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.jhordan.people_mvvm.view.PeopleDetailActivity"
            android:parentActivityName="com.example.jhordan.people_mvvm.view.PeopleActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>
